<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg" > 
   
        
   <LinearLayout android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">          
    
   
   
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" >
    
        
        
   <LinearLayout android:layout_width="match_parent"
       android:layout_height="match_parent"    
       android:background="@drawable/bg"
       android:orientation="horizontal"
       android:weightSum="1"
       >
       
        <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"  
        android:orientation="vertical"        
        android:layout_margin="5dp"
        
        > 	

            <ImageView
                android:id = "@+id/quesimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:src="@drawable/refimg" 
                android:adjustViewBounds="true"
                 />
            
             <ImageView
                android:id="@+id/alienforquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"               
                android:layout_marginRight="5dp"               
                android:src="@drawable/alienleft" 
                android:adjustViewBounds="true"
                
                 />
              <ImageView
                android:id="@+id/alienforquestionlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"               
                android:layout_marginRight="5dp"       
                android:layout_marginTop="8dp"                    
                android:src="@drawable/alienlightwithspaceleft" 
                android:adjustViewBounds="true"
                 />
            
            <TextView
		        android:id = "@+id/quesbodyhighlighted"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#000000"
		        android:textSize="15sp" 
		       	android:layout_below="@+id/alienforquestionlight" 
		        android:layout_marginBottom="5dp"
		        android:layout_marginLeft="5dp"               
                android:layout_marginRight="5dp"   
		        android:background="#F4FA58"
		        android:padding="20dp"
		        android:text = "Read the sentence. Use context clues to help you figure out the meaning of the word jovial. Then, choose the correct meaning of the word jovial"
        	 />
            
             <TextView
		        android:id = "@+id/quesbody"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#ffffff"
		        android:textSize="15sp"      
		        android:layout_margin="5dp"
		        android:layout_below="@+id/quesbodyhighlighted"
		        android:text = "Read the sentence. Use context clues to help you figure out the meaning of the word jovial. Then, choose the correct meaning of the word jovial"
        	 />
             
             <ImageView
                android:id="@+id/alienforexplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"               
                android:layout_marginRight="5dp"     
                android:layout_marginTop="10dp"        
                android:layout_below="@+id/quesbody"
                android:layout_alignRight="@+id/quesbody"
                 android:adjustViewBounds="true"  
                android:src="@drawable/alienright" 
               
                 />
             
             <ImageView
                android:id="@+id/alienforexplanationlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"               
                android:layout_marginRight="5dp"     
                android:layout_marginTop="20dp"        
                android:layout_below="@+id/quesbody" 
                android:adjustViewBounds="true" 
                android:src="@drawable/alienlightwithspaceright" 
                
                 />
             
             <LinearLayout 
                 android:id = "@+id/explanationcontainer"
                 android:layout_height="fill_parent"
                 android:layout_width="match_parent"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="5dp"
                 android:layout_marginBottom="5dp"
                 android:layout_marginTop="15dp"
                 android:animateLayoutChanges="true"
                 android:layout_below="@+id/alienforexplanation"  
                 android:orientation="vertical"
                 android:background="#8896a3">
                 
                 <TextView 
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:layout_marginTop="10dp"
                     android:textSize="20sp"
                     android:textColor="#000000"
                     android:textStyle="bold"
                     android:text = "Explanation"/>
                 
                  <TextView 
                     android:id ="@+id/explanationcontent"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:layout_marginTop="10dp"
                     android:textSize="15sp"
                     android:textColor="#000000"
                     android:layout_marginBottom="10dp"
                     android:text = "Explanation Explanation"/>
                 	 
             </LinearLayout>
             
            
        </RelativeLayout>
        
        <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"                               
        android:orientation="vertical"        
        android:layout_margin="5dp"
    
        >       
        	
             <LinearLayout
           android:id="@+id/questionprogressbarcontainer"
           android:layout_width="fill_parent"
           android:gravity="right"
           android:layout_height="60dp"
           android:orientation="horizontal" 
           android:layout_gravity="right"
           android:layout_marginRight="35dp"
           android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
           >          
          
       </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                
                 <ImageView 
                     android:id="@+id/choiceresulticon"
                     android:layout_width="30dp"
                     android:layout_height="30dp"                     
                     android:layout_marginBottom="3dp"			       	 
			       	 android:layout_marginLeft="15dp"
			       	 android:background="@drawable/tick"
			       	 android:visibility="visible" 			       	
                     />
                 
                 <TextView
			        android:id = "@+id/choicelabel"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:textColor="#ffffff"
			        android:textStyle="bold"
			        android:textSize="20sp" 
			        android:layout_marginLeft="15dp"
			        android:layout_marginBottom="3dp"
			        android:layout_marginTop="0dp"
			        android:text = "CHOSE THE CORRECT ANSWER"
         		/>
                 
            </LinearLayout>
            
           
          
            
            <LinearLayout
                android:id="@+id/choicecontainer"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                
                
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                
                 <Button android:layout_width="150dp" 
	                android:id="@+id/btnPrevious"
	                android:layout_gravity="right"
	                android:layout_height="75dp"
	                android:textSize="18sp"
	                android:text = "BACK"
	                android:background="@drawable/previous"
	                android:textColor="#ffffff"
	                android:textStyle="bold"	                
	                android:layout_marginLeft="20dp"
	                />
                 
                  <Button android:layout_width="180dp" 
	                android:id="@+id/btnsubmitnext"
	                android:layout_gravity="center"
	                android:layout_height="40dp"
	                android:textSize="20sp"
	                android:text = "SUBMIT"
	                android:background="@drawable/custom_button_blue"
	                android:textColor="#ffffff"
	                android:textStyle="bold"	
	                android:layout_marginLeft="0dp"                
	                />
                 
	           
            </LinearLayout>
            
        </LinearLayout>
       
   </LinearLayout>
  
   </ScrollView>  
   </LinearLayout>
   
	  

</LinearLayout>
